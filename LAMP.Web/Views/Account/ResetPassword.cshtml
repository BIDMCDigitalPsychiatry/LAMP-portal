@model ResetPasswordViewModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="login-box">
    <img src="~/Content/Default/images/logo_lamp.png" alt="Lamp">
    @using (Ajax.BeginForm("ResetPassword", "Account", new { returnUrl = ViewBag.ReturnUrl }, new AjaxOptions { UpdateTargetId = "targetId", HttpMethod = "post", OnSuccess = "onLoginSuccessRP", OnFailure = "handleFailureRP" }, new { role = "form", name = "form", id = "formResetPassword" }))
    {
        @Html.HiddenFor(m => m.Code)
        @Html.HiddenFor(m => m.AdminID)
        <fieldset>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-lg", @type = "password", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @class = "help-inline", @style = "color:#febcae" })
                <span class="input-icon"><img src="~/Content/Default/images/icon_password.png" alt="Lamp"></span>
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", @type = "password", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, String.Empty, new { @class = "help-inline", @style = "color:#febcae" })
                <span class="input-icon"><img src="~/Content/Default/images/icon_password.png" alt="Lamp"></span>
            </div>
            <div id="msg" class="alert alert-danger alert-white rounded">
            </div>
            <div id="msgsuccess" class="alert alert-success alert-white rounded">
            </div>
            <input type="submit" id="btnReset" data-toggle="Reset password" title="Reset password" value="Reset password" class="btn btn-default" />
        </fieldset>
    }
</div>
<div id="targetId"></div>
@section page_scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#msgsuccess").hide();
            $("#msg").hide();
        });
    </script>
    @Scripts.Render("~/Content/Default/javascripts")
    <script src='@Url.Content("~/Scripts/Pages/user.js")' type='text/javascript'></script>
}


