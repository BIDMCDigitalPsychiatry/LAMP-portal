@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/Content/Default/images/favicon.png" type="image/png">
    <title>LAMP</title>
    @Styles.Render("~/Content/Default/css/lampcss")
    @RenderSection("page_css", required: false)
    <script>
        var appPath = '@Url.Content("~/")';
    </script>
</head>
<body>
    <div class="loader-overlay" style="display:none" id="loaderImage">
        <div class="sk-circle">
            <div class="sk-circle1 sk-child"></div>
            <div class="sk-circle2 sk-child"></div>
            <div class="sk-circle3 sk-child"></div>
            <div class="sk-circle4 sk-child"></div>
            <div class="sk-circle5 sk-child"></div>
            <div class="sk-circle6 sk-child"></div>
            <div class="sk-circle7 sk-child"></div>
            <div class="sk-circle8 sk-child"></div>
            <div class="sk-circle9 sk-child"></div>
            <div class="sk-circle10 sk-child"></div>
            <div class="sk-circle11 sk-child"></div>
            <div class="sk-circle12 sk-child"></div>
        </div>
    </div>
    <nav class="navbar navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Users", "UserAdmin")" class="logo"><img src="~/Content/Default/images/logo_inner.png" alt="Lamp"></a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right" id="menu">
                <li id="Menu1"><a href="~/UserAdmin/Users">Users</a></li>
                <li id="Menu2"><a href="~/Survey/Index">Surveys</a></li>
                <li id="Menu6"><a href="~/UserAdmin/ManageSchedule">Schedule</a></li>
                <li id="Menu4"><a href="~/UserAdmin/AddTipsAndBlogs">Articles &amp; Tips</a></li>
                <li id="Menu5"><a href="~/UserAdmin/ViewAllAppHelp">How to use this app</a></li>
                <li id="Menu3"><a href="~/UserAdmin/Settings">Settings</a></li>
                <li class="user-drop">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <p><span>Welcome</span>@ViewBag.Name</p> <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="~/Account/ChangePassword"><i class="password"></i>Change Password</a></li>
                        <li><a href="~/Account/LogOut"><i class="logout"></i>Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="page-content">
        @RenderBody()
    </div>
    <footer><p class="copy">© 2017 LAMP. All rights reserved.</p></footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/javascripts")
    <script src="~/Scripts/Pages/Common.js"></script>
    @RenderSection("page_scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            /*******For making menu headings underline****/
            var path = window.location.pathname;
            // console.log(path);
