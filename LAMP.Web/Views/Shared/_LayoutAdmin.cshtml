            }
            else if (path.indexOf('/UserAdmin/ManageSchedule') > -1 ||
                path.indexOf('/UserAdmin/AdminScheduleSurvey') > -1 || path.indexOf('/UserAdmin/EditSurveySchedule') > -1 ||
                path.indexOf('/UserAdmin/AdminScheduleGame') > -1 || path.indexOf('/UserAdmin/EditGameSchedule') > -1 ||
                path.indexOf('/UserAdmin/AdminScheduleBatch') > -1 || path.indexOf('/UserAdmin/EditBatchSchedule') > -1) {
                $('#Menu6').addClass('active');
