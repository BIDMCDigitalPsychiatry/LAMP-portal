@model AppHelpViewModelList
@using LAMP.Utility
@using PagedList.Mvc;
@{
    ViewBag.Title = "ViewAllAppHelp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    @using (Ajax.BeginForm("SearchAllAppHelp", "UserAdmin", new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "divAppHelpList", InsertionMode = InsertionMode.Replace }, new { id = "appHelpListForm", @class = "form-horizontal", pageSize = Model.SortPageOptions.PageSize }))
    {
        <div class="title-sub clearfix">
            <h4>HOW TO USE THIS APP</h4>
            @if (Model.IsSuperAdminSaved != true)
            {
                <a href="@Url.Action("HowToUseThisApp", "UserAdmin")" class="btn btn-primary help" title="Add New">Add New</a>
            }
            else
            {
                <a href="@Url.Action("HowToUseThisApp", "UserAdmin")" class="btn btn-primary help" title="Edit">Edit</a>
            }
        </div>
        <div class="main-content clearfix" id="divAppHelpList">
            @{ Html.RenderPartial("_AppHelpListPartial", Model); }
        </div>
    }
</div>
@section page_scripts{
    <script src='@Url.Content("~/Scripts/Pages/apphelp.js")' type='text/javascript'></script>
    <script type="text/javascript">
        function PagerScrollTop() {
            $("#loaderImage").hide();
            $('body,html').animate({
                scrollTop: 0
            }, 300);
        }
        function BeginPaginaionAppHelp() {
            $('#loaderImage').show();
        }
    </script>
}




